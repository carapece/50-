{
    "manifest_version": 3,
    "name": "五十音悬浮面板",
    "version": "1.0",
    "description": "随时查阅五十音并点击发音，提升日语学习效率",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["panel.css"]
      }
    ]
  }